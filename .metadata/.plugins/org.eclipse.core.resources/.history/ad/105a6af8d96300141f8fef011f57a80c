package DataStructures;

public class Stack{
	Node top;
	Node curr;
	Node buttom;
	int items;
	
	public class Node{
		Node up;
		Node down;
		int data;
		
		public Node(){}
		
		public Node(int data){
			this.up = null;
			this.down = null;
			this.data = data;
		}
		
	}
	
	public Stack(){
		this.top = null;
		this.curr = null;
		this.buttom = null;
		this.items = 1;
	}
	
	public Stack(int[] input){
		if(input == null){
			return;
		}
		for(int i = 0; i < input.length;i++){
			push(input[i]);
		}
	}
	
	public void push(int data){
		Node newNode = new Node(data);
		if(isEmpty()){
			top = newNode;
			buttom = newNode;
		} else {
			top.up = newNode;
			newNode.down = top;
			top = newNode;
		}
		items++;
	}
	
	public int pop(){
		if(isEmpty()){
			return -1; //negative means error
		}
		int data = top.data;
		if(items == 1){
			buttom = null;
			top = null;
		} else {
			top = top.down;
			top.up = null;
		}
		items--;
		return data;
	}
	
	public int peek(){
		if(isEmpty()){
			return -1;//negative means error;
		}
		return top.data;
	}

	public boolean isEmpty(){
		if(items == 0){
			return true;
		}
		return false;
	}
	
	public int items(){
		return items;
	}
	
	public void printStack(){
		if(isEmpty()){
			return;
		}
		curr = buttom;
		while (curr.up != null){
			System.out.print(curr.data + ",");
			curr = curr.up;
		}
		System.out.println(curr.data);
	}
}

